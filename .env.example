# Database Configuration
DATABASE_URL=your_postgresql_connection_string_here

# IPFS/Pinata Configuration
PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Blockchain Configuration
BLOCKCHAIN_PRIVATE_KEY=your_ethereum_private_key_here

# Network RPC URLs (optional, defaults provided)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org

# Smart Contract Addresses (required for minting)
ETHEREUM_CONTRACT_ADDRESS=your_ethereum_contract_address
POLYGON_CONTRACT_ADDRESS=your_polygon_contract_address
ARBITRUM_CONTRACT_ADDRESS=your_arbitrum_contract_address
BASE_CONTRACT_ADDRESS=your_base_contract_address

# Session Configuration
SESSION_SECRET=your_session_secret_here